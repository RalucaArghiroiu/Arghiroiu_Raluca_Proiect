@model Arghiroiu_Raluca_Proiect.Pages.Vehicles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vehicle.Id" />
            <div class="form-group">
                <label asp-for="Vehicle.Plate" class="control-label"></label>
                <input asp-for="Vehicle.Plate" class="form-control" />
                <span asp-validation-for="Vehicle.Plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Make" class="control-label"></label>
                <input asp-for="Vehicle.Make" class="form-control" />
                <span asp-validation-for="Vehicle.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Model" class="control-label"></label>
                <input asp-for="Vehicle.Model" class="form-control" />
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Status" class="control-label"></label>
                <select asp-for="Vehicle.Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Vehicle.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.FleetId" class="control-label">Fleet</label>
                <select asp-for="Vehicle.FleetId" class="form-control" asp-items="ViewBag.FleetId"></select>
                <span asp-validation-for="Vehicle.FleetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

